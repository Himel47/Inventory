@using Inventory.DTO.DTOs

@{
}

@model List<StockProductDto>

<body>

    <div class="container-fluid text-right">
        <div class="d-flex justify-content-between">
            <h2 class=" mb-3">Products List</h2>

            <span class="gap-3 mb-4 mt-2">
                <a class="btn btn-outline-info btn-sm" asp-controller="Product" asp-action="AddProduct">Add New product</a>
                @*<a class="btn btn-info btn-sm text-dark" asp-controller="product" asp-action="AddproductToGroup">Add product To Group</a>*@
            </span>
        </div>

        <table id="product-table" class="table table-striped table-bordered">
            <thead class="bg-secondary">
                <tr>
                    <th class="text-center"></th>
                    <th class="text-center">Category id</th>
                    <th class="text-center">Product name</th>
                    <th class="text-center">Unit Cost</th>
                    <th class="text-center">Amount in Stock</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody class="p-3">
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <img src="data:@product.ProductViewPictureFormat;base64,@product.ProductViewPicture" class="rounded-circle" width="75" />
                        </td>
                        <td>@product.categoryId</td>
                        <td>@product.productName</td>
                        <td>@product.productUnitPrice</td>
                        <td>@product.productQuantity</td>
                        <td class="text-center">
                            <div class="btn btn-group gap-3">
                                <a class="text-decoration-none btn btn-outline-success" asp-action="ProductDetails" asp-route-pName="@product.productName" asp-route-cId="@product.categoryId">Details</a>
                                @* <a class="text-decoration-none" asp-action="UpdateData" asp-route-pId="@product.productId">Edit</a> *@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>



@section Scripts {
    <script>
        $(document).ready(function(){

            $("#product-table").DataTable()

        })
    </script>
}